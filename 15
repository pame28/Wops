y este es el .ts de la hija

import { CommonModule } from '@angular/common';
import { Component } from '@angular/core';
import { SideBarComponent } from '../../shared/side-bar/side-bar';

@Component({
  selector: 'app-areas.component',
  imports: [CommonModule,SideBarComponent],
  templateUrl: './areas.component.html',
  styleUrl: './areas.component.css',
})
export class AreasComponent {
  isSidebarCollapsed = false;
  onSidebarToggled(isCollapsed: boolean) {
    this.isSidebarCollapsed = isCollapsed;
  }


}


y este es mi app.routes.ts

import { Routes } from '@angular/router';
import { LoginComponent } from './features/login/login.component';
import { HomeComponent } from './features/home/home.component';
import { MantenimientosComponent } from './features/mantenimientos/mantenimientos.component';
import { AreasComponent } from './features/areas/areas.component';

export const routes: Routes = [

  {
    path: '',
    component: LoginComponent,
  },
  {
    path: 'home',
    component: HomeComponent,
  },

 {
    path: 'mantenimientos',
    component: MantenimientosComponent,
    children: [
           {
        path: 'areas',
        component: AreasComponent
      }
    ]
  },


  {
    path: '**',
    redirectTo: '',
  }

];

