.submenu li a.active-link {
  background-color: #00C1D4;
}















<a [routerLink]="child.link"
   routerLinkActive="active-link"
   [routerLinkActiveOptions]="{ exact: !!child.exact }">
  <i class="fas" [class]="child.icon"></i>
  <span class="menu-label">{{ child.label }}</span>
</a>








import { CommonModule } from '@angular/common';
import { Component, OnInit, Output, EventEmitter } from '@angular/core';
import { Router, NavigationEnd, RouterModule } from '@angular/router';
import { filter } from 'rxjs/operators';

interface MenuItem {
  label: string;
  icon: string;
  link?: string;
  exact?: boolean;
  children?: MenuItem[];
  expanded?: boolean;
}

@Component({
  selector: 'app-side-bar',
  standalone: true,
  imports: [CommonModule, RouterModule],
  templateUrl: './side-bar.html',
  styleUrls: ['./side-bar.css'],
})
export class SideBarComponent implements OnInit {

  @Output() sidebarToggled = new EventEmitter<boolean>();

  isCollapsed = false;
  currentRoute = '';

  menuItems: MenuItem[] = [
    { label: 'Home', icon: 'fa-solid fa-house', link: '/home', exact: true },
    { 
      label: 'Mantenimientos', 
      icon: 'fa-solid fa-gear', 
      expanded: false,
      children: [
        { label: 'Áreas', icon: 'fa-solid fa-toolbox', link: '/areas', exact: true },
        { label: 'Usuarios', icon: 'fa-solid fa-users', link: '/usuarios', exact: true }
      ]
    },
    { label: 'Mi perfil', icon: 'fa-solid fa-user', link: '/perfil', exact: true },
    { label: 'Ayuda', icon: 'fa-solid fa-circle-question', link: '/ayuda', exact: true },
    { label: 'Cerrar Sesión', icon: 'fa-solid fa-right-from-bracket', link: '/logout', exact: true }
  ];

  constructor(private router: Router) {}

  ngOnInit() {
    const savedState = localStorage.getItem('sidebar-collapsed');
    this.isCollapsed = savedState === 'true';
    this.sidebarToggled.emit(this.isCollapsed);

    this.router.events
      .pipe(filter(event => event instanceof NavigationEnd))
      .subscribe((event: any) => {
        this.currentRoute = event.url;
        this.expandActiveParents(this.menuItems);
      });
  }

  toggleSidebar() {
    this.isCollapsed = !this.isCollapsed;
    this.sidebarToggled.emit(this.isCollapsed);
    localStorage.setItem('sidebar-collapsed', this.isCollapsed.toString());
  }

  isActive(link: string, exact: boolean = false): boolean {
    return exact ? this.currentRoute === link : this.currentRoute.startsWith(link);
  }

  toggleSubmenu(item: MenuItem) {
    item.expanded = !item.expanded;
  }

  private expandActiveParents(items: MenuItem[]) {
    for (const item of items) {
      if (item.children) {
        item.expanded = item.children.some(child => this.isActive(child.link!, child.exact));
        this.expandActiveParents(item.children);
      }
    }
  }
}




--------



<aside class="sidebar" [class.collapsed]="isCollapsed">
  <div class="sidebar-header">
    <div class="logo" *ngIf="!isCollapsed">
      <h2><span class="work">work</span><span class="ops">Ops</span></h2>
    </div>
    <button class="toggle-btn" (click)="toggleSidebar()">
      <i class="fas" [class.fa-chevron-left]="!isCollapsed" [class.fa-chevron-right]="isCollapsed"></i>
    </button>
  </div>

  <nav class="sidebar-menu">
    <ul>
      <li *ngFor="let item of menuItems">
        <ng-container *ngIf="!item.children">
          <a 
            [routerLink]="item.link" 
            routerLinkActive="active-link"
            [routerLinkActiveOptions]="{ exact: item.exact === true }"
          >
            <i class="fas" [class]="item.icon"></i>
            <span *ngIf="!isCollapsed" class="menu-label">{{ item.label }}</span>
          </a>
        </ng-container>

        <ng-container *ngIf="item.children">
          <a (click)="toggleSubmenu(item)" class="has-children">
            <i class="fas" [class]="item.icon"></i>
            <span *ngIf="!isCollapsed" class="menu-label">{{ item.label }}</span>
            <i *ngIf="!isCollapsed" class="fas fa-chevron-down toggle-icon" [class.expanded]="item.expanded"></i>
          </a>

          <ul *ngIf="item.expanded && !isCollapsed" class="submenu">
            <li *ngFor="let child of item.children">
              <a [routerLink]="child.link" routerLinkActive="active-link" [routerLinkActiveOptions]="{ exact: child.exact }">
                <i class="fas" [class]="child.icon"></i>
                <span class="menu-label">{{ child.label }}</span>
              </a>
            </li>
          </ul>
        </ng-container>
      </li>
    </ul>
  </nav>

  <div class="sidebar-footer" *ngIf="!isCollapsed">
    <p class="version">Versión 1.0</p>
  </div>
</aside>






----------

.has-children {
  justify-content: space-between;
}

.submenu {
  list-style: none;
  padding-left: 20px;
  margin-top: 5px;
}

.submenu li a {
  padding: 8px 20px;
  display: flex;
  align-items: center;
  color: #fff;
  text-decoration: none;
  font-size: 0.95rem;
}

.submenu li a.active-link {
  background-color: #00C1D4;
}

.toggle-icon {
  transition: transform 0.3s ease;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

