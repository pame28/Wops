import { Component, OnInit } from '@angular/core';
import { FormBuilder, FormGroup, Validators, ReactiveFormsModule, FormsModule } from '@angular/forms';
import { CommonModule} from '@angular/common';
import { SideBarComponent } from '../../shared/side-bar/side-bar';
import Swal from 'sweetalert2';
import { AccesosService } from './services/accesos.service';


@Component({
  selector: 'app-accesos',
  standalone: true,
  imports: [CommonModule, ReactiveFormsModule, SideBarComponent,FormsModule],
  templateUrl: './accesos.component.html',
  styleUrls: ['./accesos.component.css']
})
export class AccesosComponent implements OnInit {

  accesos: any[] = [];
  searchText: string = '';
  accesoForm!: FormGroup;
  showCard = false; // controla la card
  editMode = false;
  currentId: string | null = null;
  isSidebarCollapsed = false;

  constructor(private fb: FormBuilder, private accesosService: AccesosService) {}

  ngOnInit(): void {
    this.accesoForm = this.fb.group({
      nombre: ['', Validators.required],
      descripcion: ['', Validators.required],
    });
    this.loadAccesos();
  }

  filteredAccesos() {
    if (!this.searchText) return this.accesos;
    return this.accesos.filter(a =>
      a.nombre.toLowerCase().includes(this.searchText.toLowerCase())
    );
  }

  loadAccesos() {
    this.accesosService.getAccesos().subscribe({
      next: resp => this.accesos = resp.data ?? resp,
      error: () => Swal.fire('Error', 'No se pudieron cargar las accesos', 'error')
    });
  }
  // Abrir card para crear
  openCreateCard() {
    this.editMode = false;
    this.currentId = null;
    this.accesoForm.reset();
    this.showCard = true;
  }

  // Abrir card para editar

openEditCard(acceso: any) {
  this.editMode = true;
  this.currentId = acceso.id;

  // Limpia el formulario para evitar valores previos
  this.accesoForm.reset();

  // Parcha ambos campos (usa fallback si el backend usa otros nombres)
  this.accesoForm.patchValue({
    nombre: acceso.nombre,
    descripcion: acceso.descripcion
  });

  this.showCard = true;
}

  closeCard() {
    this.showCard = false;
  }

  saveAcceso() {
    if (this.accesoForm.invalid) {
      this.accesoForm.markAllAsTouched();
      return;}

    const body = this.accesoForm.value;

   let request$;
  if (this.editMode && this.currentId) {
    // Enviar id y nombre al backend
    request$ = this.accesosService.actualizarAcceso(this.currentId, {
      id: this.currentId,
      nombre: body.nombre,
      descripcion: body.descripcion,
    });
  } else {

 request$ = this.accesosService.crearAcceso(body);
  }
      request$.subscribe({
    next: () => {
      Swal.fire(
        'Éxito',
        this.editMode ? 'Acceso actualizado' : 'Acceso creado',
        'success'
      );
      this.loadAccesos();
      this.closeCard();
    },
    error: (err) => {
      console.error(err);
      Swal.fire('Error', 'No se pudo guardar', 'error');
    }
  });
}

  deleteAcceso(id: string) {
    Swal.fire({
      title: '¿Eliminar acceso?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonText: 'Eliminar'
    }).then(res => {
      if (res.isConfirmed) {
        this.accesosService.eliminarAcceso(id).subscribe({
          next: () => {
            Swal.fire('Eliminado', 'Acceso eliminado', 'success');
            this.loadAccesos();
          }
        });
      }
    });
  }

  onSidebarToggled(state: boolean) {
    this.isSidebarCollapsed = state;
  }
}



