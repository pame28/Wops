  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal {
  background: #ffffff;
  padding: 25px;
  border-radius: 12px;
  width: 420px;
  max-width: 95%;
  box-shadow: 0 15px 40px rgba(0,0,0,.25);
  animation: scaleIn .25s ease;
}

