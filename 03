<div class="layout">
  <app-side-bar [class.collapsed]="isCollapsed"></app-side-bar>

  <div class="main" [class.collapsed]="isCollapsed">
    <app-navbar (toggleSidebar)="toggleSidebar()"></app-navbar>

    <div class="content">
      <div class="cards-container">
        <div class="card" *ngFor="let card of menuItems" (click)="goTo(card.link)">
          <i class="{{ card.icon }} card-icon"></i>
          <h3>{{ card.label }}</h3>
        </div>
      </div>
    </div>
  </div>
</div>




-------

isCollapsed = false;

toggleSidebar() {
  this.isCollapsed = !this.isCollapsed;
}



