<div class="content-wrapper">

  <!-- Header con búsqueda y botón crear -->
  <div class="main-title">
    <div class="home-title">
      <h1>Áreas</h1>
    </div>
  </div>

  <div class="layout">
    <app-side-bar (sidebarToggled)="onSidebarToggled($event)"></app-side-bar>

    <div class="content">
      <div class="card main-card">
        <div class="card-header">
          <input type="text" placeholder="Buscar..." [(ngModel)]="searchText" />
          <button class="btn-primary" (click)="openCreateCard()">+ Nueva Área</button>
        </div>

        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Zona</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let area of filteredAreas()">
              <td>{{ area.id }}</td>
              <td>{{ area.nombre }}</td>
              <td class="acciones-icon">
                <button class="icon edit" (click)="openEditCard(area)">
                  <i class="fa-regular fa-pen-to-square"></i>
                </button>
                <button class="icon delete" (click)="deleteArea(area.id)">
                  <i class="fa-regular fa-trash-can"></i>
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- CARD QUE FUNCIONA COMO MODAL -->
  <div class="card-backdrop" *ngIf="showCard">
    <div class="card modal-card">
      <h3>{{ editMode ? 'Editar Área' : 'Crear Área' }}</h3>
      <form [formGroup]="areaForm" (ngSubmit)="saveArea()">
        <label>Zona</label>
        <input type="text" formControlName="nombre" />
        <div class="modal-actions">
          <button class="btn-primary" type="submit">
            {{ editMode ? 'Actualizar' : 'Guardar' }}
          </button>
          <button class="btn-outline" type="button" (click)="closeCard()">Cancelar</button>
        </div>
      </form>
    </div>
  </div>

</div>








