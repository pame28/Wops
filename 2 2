        <div class="actions">
          <input
            type="text"
            placeholder="Buscar..."
            [(ngModel)]="searchText"
          />

          <button class="btn-primary" (click)="openCreateModal()">
            + Nueva √Årea
          </button>
        </div>
      </div>

      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Zona</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let area of filteredAreas()">
            <td>{{ area.id }}</td>
            <td>{{ area.nombre }}</td>
            <td>
              <button class="icon edit" (click)="openEditModal(area)">‚úè</button>
              <button class="icon delete" (click)="deleteArea(area.id)">üóë</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- MODAL (VA AQU√ç, ABAJO DEL TODO) -->
