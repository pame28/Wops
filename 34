<app-crud-layout
  title="Accesos"
  createLabel="Nuevo Acceso"
  [data]="accesos"
  [columns]="columns"
  (onCreate)="openCreateCard()"
  (onEdit)="openEditCard($event)"
  (onDelete)="deleteAcceso($event.id)">
</app-crud-layout>

<app-crud-modal
  *ngIf="showCard"
  [title]="editMode ? 'Editar Acceso' : 'Nuevo Acceso'"
  submitLabel="Guardar"
  [form]="accesoForm"
  (onClose)="closeCard()"
  (onSubmit)="saveAcceso()">

  <!-- CAMPOS ESPECÍFICOS -->
  <label>Nombre</label>
  <input formControlName="nombre" />

  <label>Descripción</label>
  <input formControlName="descripcion" />

</app-crud-modal>









columns = [
  { field: 'id', header: 'ID' },
  { field: 'nombre', header: 'Nombre' },
  { field: 'descripcion', header: 'Descripción' }
];










