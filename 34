<div class="card">
  <div class="card-header">
    <h2>{{ title }}</h2>

    <div class="actions">
      <input
        type="text"
        placeholder="Buscar..."
        [(ngModel)]="searchText"
      />

      <button class="btn-primary" (click)="onCreate.emit()">
        + {{ createLabel }}
      </button>
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th *ngFor="let col of columns">{{ col.header }}</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
      <tr *ngFor="let item of filteredData()">
        <td *ngFor="let col of columns">
          {{ item[col.field] }}
        </td>

        <td class="acciones-icon">
          <button class="icon edit" (click)="onEdit.emit(item)">
            <i class="fa-regular fa-pen-to-square"></i>
          </button>
          <button class="icon delete" (click)="onDelete.emit(item)">
            <i class="fa-regular fa-trash-can"></i>
          </button>
        </td>
      </tr>
    </tbody>
  </table>
</div>













import { Component, Input, Output, EventEmitter } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';

@Component({
  selector: 'app-crud-layout',
  standalone: true,
  imports: [CommonModule, FormsModule],
  templateUrl: './crud-layout.component.html'
})
export class CrudLayoutComponent {

  @Input() title = '';
  @Input() createLabel = 'Nuevo';
  @Input() data: any[] = [];
  @Input() columns: { field: string; header: string }[] = [];

  @Output() onCreate = new EventEmitter<void>();
  @Output() onEdit = new EventEmitter<any>();
  @Output() onDelete = new EventEmitter<any>();

  searchText = '';

  filteredData() {
    if (!this.searchText) return this.data;

    return this.data.filter(item =>
      Object.values(item)
        .join(' ')
        .toLowerCase()
        .includes(this.searchText.toLowerCase())
    );
  }
}

















