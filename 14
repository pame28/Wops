<div class="areas-page">

  <div class="areas-header">
    <h2>Áreas</h2>
    <div class="actions">
      <button class="btn primary" (click)="openCreate()">+ Nueva Área</button>
      <button class="btn" (click)="load()">⟳ Refrescar</button>
    </div>
  </div>

  <div class="table-card">
    <table class="nice-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Zona</th>
          <th class="actions-col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <tr *ngIf="loading"><td colspan="3" class="center">Cargando...</td></tr>
        <tr *ngFor="let a of areas; trackBy: trackById">
          <td>{{ a.id }}</td>
          <td>{{ a.nombre }}</td>
          <td class="actions-col">
            <button class="btn small" (click)="openEdit(a)">Editar</button>
            <button class="btn danger small" (click)="confirmDelete(a)">Eliminar</button>
          </td>
        </tr>
        <tr *ngIf="!loading && (!areas || areas.length === 0)"><td colspan="3" class="center">No hay registros</td></tr>
      </tbody>
    </table>
  </div>

  <!-- Modal simple -->
  <div class="modal-backdrop" *ngIf="showModal">
    <div class="modal">
      <h3>{{ modalMode === 'create' ? 'Crear Área' : 'Editar Área' }}</h3>

      <label class="field">
        <span>Zona</span>
        <input type="text" [(ngModel)]="nombre" />
      </label>

      <div class="modal-actions">
        <button class="btn" (click)="closeModal()">Cancelar</button>
        <button class="btn primary" (click)="save()">{{ modalMode === 'create' ? 'Crear' : 'Guardar' }}</button>
      </div>
    </div>
  </div>

</div>






