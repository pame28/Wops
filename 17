import { Injectable } from '@angular/core';
import { HttpClient, HttpHeaders } from '@angular/common/http';
import { AppConfigService } from '../../../../services/app-config.service';
import { from, Observable, throwError } from 'rxjs';
import { catchError, switchMap } from 'rxjs/operators';
import { AuthDB } from '../../../login/Services/login-AuthBd.service';
import { LogResponse, DetailResponse } from '../models/adminLogs.models';
import Swal from 'sweetalert2';

@Injectable({
  providedIn: 'root'
})
export class AdminLogsServices {

  private apiUrl: string;
  private authDB = new AuthDB();

  constructor(
    private http: HttpClient,
    private config: AppConfigService
  ) { this.apiUrl = this.config.apiUrl }

  // private authDB = new AuthDB();
  getLogs(params: { initialDate: string, finalDate: string }): Observable<LogResponse> {
    return from(this.authDB.getToken()).pipe(
      switchMap(token => {
        const headers = new HttpHeaders({
          Authorization: `Bearer ${token}`
        });
        return this.http.post<LogResponse>(`${this.apiUrl}/logs/get_logs_by_dates`, params, { headers });

      }),
      catchError(error => {
        if (error.status === 401) {
          Swal.fire({
            icon: 'warning',
            title: 'Sesi√≥n expirada',
            text: 'Tu sesi√≥n ha expirado. Por favor, inicia sesi√≥n nuevamente.',
            confirmButtonText: 'Ir al login',
            customClass: {
              confirmButton: 'btn-confirmar'
            }
          }).then(() => {
            window.location.href = '/'; // Redirige al login
          });
        }
        return throwError(() => error);
      })
    );
  }


  getDetallePorCif(cif: string): Observable<DetailResponse> {
    return from(this.authDB.getToken()).pipe(
      switchMap(token => {
        const headers = new HttpHeaders({
          Authorization: `Bearer ${token}`,
          'Content-Type': 'application/json'
        });
        const body = { cif: cif };
        return this.http.post<LogResponse>(`${this.apiUrl}/logs/get_logs_by_cif`, body, { headers });
      }),
      catchError(error => {
        if (error.status === 401) {
          Swal.fire({
            icon: 'warning',
            title: 'Sesi√≥n expirada',
            text: 'Tu sesi√≥n ha expirado. Por favor, inicia sesi√≥n nuevamente.',
            confirmButtonText: 'Ir al login',
            customClass: {
              confirmButton: 'btn-confirmar'
            }
          }).then(() => {
            window.location.href = '/'; // Redirige al login
          });
        }
        return throwError(() => error);
      })

    );
  }

  buscarLogsbyDates(body: any): Observable<LogResponse> {
    return from(this.authDB.getToken()).pipe(
      switchMap(token => {
        const headers = new HttpHeaders({
          Authorization: `Bearer ${token}`,
          'Content-Type': 'application/json'
        });
        return this.http.post<LogResponse>(`${this.apiUrl}/logs/get_logs_by_dates`, body, { headers });
      }),
      catchError(error => {
        if (error.status === 401) {
          Swal.fire({
            icon: 'warning',
            title: 'Sesi√≥n expirada',
            text: 'Tu sesi√≥n ha expirado. Por favor, inicia sesi√≥n nuevamente.',
            confirmButtonText: 'Ir al login',
            customClass: {
              confirmButton: 'btn-confirmar'
            }
          }).then(() => {
            window.location.href = '/'; // Redirige al login
          });
        }
        return throwError(() => error);
      })

    );
  }

  buscarLogsbyCif(body: any): Observable<LogResponse> {
    return from(this.authDB.getToken()).pipe(
      switchMap(token => {
        const headers = new HttpHeaders({
          Authorization: `Bearer ${token}`,
          'Content-Type': 'application/json'
        });
        return this.http.post<LogResponse>(`${this.apiUrl}/logs/get_logs_filtered_by_cif`, body, { headers });
      }),
      catchError(error => {
        if (error.status === 401) {
          Swal.fire({
            icon: 'warning',
            title: 'Sesi√≥n expirada',
            text: 'Tu sesi√≥n ha expirado. Por favor, inicia sesi√≥n nuevamente.',
            confirmButtonText: 'Ir al login',
            customClass: {
              confirmButton: 'btn-confirmar'
            }
          }).then(() => {
            window.location.href = '/'; // Redirige al login
          });
        }
        return throwError(() => error);
      })

    );
  }
}



